      if (passwordsInput.type === 'password') {
        passwordsInput.type = 'text'; // Show the password
        eyesIcon.textContent = 'üôà'; // Change the icon to a "hide" symbol
      } else {
        passwordsInput.type = 'password'; // Hide the password
        eyesIcon.textContent = 'üëÅÔ∏è'; // Change the icon to a "show" symbol
      }
    });
    localStorage.setItem("datatable_page","");
